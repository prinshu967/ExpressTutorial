<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Welcome | Profile Page</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet"/>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Poppins', sans-serif;
    }

    body {
      background: linear-gradient(135deg, #74ebd5, #ACB6E5);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 40px 20px;
      color: #333;
    }

    .container {
      background-color: rgba(255, 255, 255, 0.95);
      padding: 30px;
      border-radius: 20px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
      text-align: center;
      max-width: 700px;
      width: 100%;
      margin-bottom: 40px;
    }

    h1 {
      font-size: 2.3rem;
      color: #2c3e50;
      margin-bottom: 20px;
    }

    .form-group {
      margin-top: 20px;
      text-align: left;
    }

    .form-group label {
      display: block;
      font-weight: 600;
      margin-bottom: 10px;
      color: #2c3e50;
    }

    textarea {
      width: 100%;
      height: 100px;
      padding: 15px;
      border-radius: 10px;
      border: 2px solid #ccc;
      font-size: 1rem;
      resize: vertical;
      transition: border 0.3s ease;
    }

    textarea:focus {
      border-color: #3498db;
      outline: none;
    }

    .submit-btn {
      margin-top: 15px;
      background-color: #4CAF50;
      color: white;
      border: none;
      padding: 12px 20px;
      border-radius: 8px;
      font-size: 1rem;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .submit-btn:hover {
      background-color: #388e3c;
    }

    .posts {
      display: flex;
      flex-direction: column;
      gap: 20px;
      max-width: 700px;
      width: 100%;
    }

    .post {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background-color: rgba(255, 255, 255, 0.95);
      padding: 20px 25px;
      border-radius: 15px;
      box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
      transition: transform 0.2s ease;
    }

    .post:hover {
      transform: translateY(-5px);
    }

    .post p {
      font-size: 1rem;
      color: #444;
      max-width: 70%;
    }

    .actions {
      display: flex;
      gap: 10px;
    }

    .edit-btn,
    .delete-btn {
      padding: 8px 16px;
      border: none;
      border-radius: 8px;
      font-size: 0.9rem;
      cursor: pointer;
      color: white;
    }

    .edit-btn {
      background-color: #3498db;
    }

    .edit-btn:hover {
      background-color: #2980b9;
    }

    .delete-btn {
      background-color: #e74c3c;
    }

    .delete-btn:hover {
      background-color: #c0392b;
    }

    .btn {
      margin-top: 30px;
      padding: 14px 30px;
      background-color: #3498db;
      color: white;
      border: none;
      border-radius: 10px;
      font-size: 1rem;
      cursor: pointer;
      transition: background-color 0.3s ease;
      text-decoration: none;
    }

    .btn:hover {
      background-color: #2980b9;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Hello <%= user?.name || 'User' %></h1>
    <h1>Welcome to Your Profile</h1>

    <form action="/post" method="POST" class="form-group">
      <label for="post">Whatâ€™s on your mind?</label>
      <textarea id="post" name="post" placeholder="Write your post here..." required></textarea>
      <input type="submit" value="Post" class="submit-btn"/>
    </form>
    <div>
      <a href="/posts"><button class="submit-btn">See all Posts</button></a>
    </div>
    </div>

    
  

  <div class="posts">
    <% if (posts && posts.length > 0) { %>
      <h2 style="margin-top: 20px;">Your Posts</h2>
    <% } %>
    <% if (posts && posts.length > 0) { %>
      <% posts.forEach(post => { %>
        <div class="post" data-id="<%= post._id %>">
          <p><%= post.content.replace(/</g, "&lt;").replace(/>/g, "&gt;") %></p>
          <div class="actions">
            <button class="edit-btn">Edit</button>
            <form action="/delete/<%= post._id %>" method="POST" style="display:inline;">
              <button type="submit" class="delete-btn">Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="post">
        <p>No posts yet. Start by writing something!</p>
      </div>
    <% } %>
  </div>

  <a href="/logout" class="btn">Logout</a>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const posts = document.querySelectorAll(".post");

      posts.forEach(postEl => {
        const editBtn = postEl.querySelector(".edit-btn");
        const contentEl = postEl.querySelector("p");
        const originalText = contentEl.textContent.trim();
        const postId = postEl.getAttribute("data-id");

        editBtn.addEventListener("click", async (e) => {
          e.preventDefault();

          if (postEl.querySelector("textarea")) return;

          const textarea = document.createElement("textarea");
          textarea.value = originalText;
          textarea.style.width = "100%";
          textarea.style.marginTop = "10px";
          textarea.style.fontSize = "1rem";
          textarea.rows = 3;

          const saveBtn = document.createElement("button");
          saveBtn.textContent = "Save";
          saveBtn.className = "submit-btn";
          saveBtn.style.marginTop = "10px";

          contentEl.style.display = "none";
          postEl.insertBefore(textarea, postEl.querySelector(".actions"));
          postEl.insertBefore(saveBtn, postEl.querySelector(".actions"));

          saveBtn.addEventListener("click", async () => {
            const newContent = textarea.value.trim();
            if (!newContent) return;

            try {
              const res = await fetch(`/edit/${postId}`, {
                method: "PUT",
                headers: {
                  "Content-Type": "application/json"
                },
                body: JSON.stringify({ content: newContent })
              });

              if (res.ok) {
                contentEl.textContent = newContent;
                contentEl.style.display = "block";
                textarea.remove();
                saveBtn.remove();
              } else {
                alert("Failed to update post.");
              }
            } catch (err) {
              console.error(err);
              alert("An error occurred.");
            }
          });
        });
      });
    });
  </script>
</body>
</html>
